<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="POST" action="/comment/create/{{id}}">
            <fieldset>
                <legend>New Comment</legend>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="fullName">Your Full Name</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="fullName" placeholder="Your Full Name" name="fullName" required >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="commentEmail">E-mail</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="email" rows="5" name="email">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="commentContent">Comment</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="commentContent" rows="5" name="content" required></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">

                        <a href="/" class="btn btn-default">Cancel</a>

                        <button type="submit" href="/article/details/{{id}}" class="btn btn-success">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>